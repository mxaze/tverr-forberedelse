datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:Passord01@localhost:5432/"
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

model Users {
    id        Int              @id @default(autoincrement())
    role      Role
    info      UserInformation?
    articles  Article?
    createdAt DateTime         @default(now())
    token     String           @unique @default(cuid())
}

model UserInformation {
    id        Int    @id @default(autoincrement())
    firstname String
    lastname  String
    email     String @unique
    password  String
    userID    Int    @unique
    user      Users  @relation(fields: [userID], references: [id])
}

model Article {
    id        Int      @id @default(autoincrement())
    title     String
    content   String
    userID    Int      @unique
    author    Users    @relation(fields: [userID], references: [id])
    createdAt DateTime @default(now())
}

enum Role {
    ADMIN
    SALES
    MONTEUR
    CUSTOMER
    GUEST
}